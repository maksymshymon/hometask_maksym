
<div class="d-flex p-2">
  <h3>Plates</h3>
</div>
<div class="d-flex p-2">
  <table class="table table-striped">
    <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Title</th>
      <th scope="col">Order #</th>
      <th scope="col">Image</th>
      <th scope="col"></th>
    </tr>
    </thead>
    <% if @collection.plates %>
      <tbody>
      <% (@collection.plates.sort_by { |plate| plate.order } ).each do |plate| %>
        <tr>
          <th scope="row"><%= plate.id %></th>
          <td><%= plate.title %></td>
          <td><%= plate.order %></td>
          <td>
            <% if plate.image.attached? %>
              <div class="image-parent">
                <%= image_tag plate.image, class: "img-fluid plate"  %>
              </div>
            <% end %>
          </td>
          <td>
            <%= link_to "Delete", [plate.collection, plate], data: {
              turbo_method: :delete,
              turbo_confirm: "Are you sure?"
            } %>
            |
            <%= link_to "Edit",
                        new_collection_path,
                        class: "link active" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    <% end %>
  </table>
</div>