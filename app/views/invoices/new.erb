<br/>
<h3 class="text-center">Create invoice</h3>

<div class="d-flex justify-content-center align-items-center">
  <% if @invoice.errors.any? %>
    <div id="error_explanation" data-turbo-cache="false">
      <% @invoice.errors.full_messages.each do |message| %>
        <div class="alert alert-danger" role="alert"><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <%= form_with model: @invoice do |form| %>
    <div class="form-groupc mb-2">
      <%= form.label :name, class:"form-label"%><br>
      <%= form.text_field :name, required: true, class: "form-control" %>
    </div>
    <div class="form-group mb-2">
      <%= form.label :surname, class:"form-label" %><br>
      <%= form.text_field :surname, required: true, class: "form-control" %>
    </div>
    <div class="form-group mb-2">
      <%= form.label :email, class:"form-label" %><br>
      <%= form.email_field :email, required: true, class: "form-control" %>
    </div>
    <div class="form-group mb-2">
      <%= form.label :from, "Collection", class:"form-label" %><br>
      <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text">
            <%= params[:collection_name] %>
          </div>
        </div>
        <%= form.text_field :from, value: params[:collection_id], readonly: true, class: "form-control" %>
      </div>
    </div>
    <div class="text-center">
      <%= form.submit "Get price", class: "btn btn-primary" %>
    </div>
    <br/>
  <% end %>
</div>


